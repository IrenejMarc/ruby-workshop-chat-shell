<div class="app-container container-fluid">
  <main role="main">
  <div class="panel panel-default">
    <div id="chat-body" class="panel-body" data-role="chat-body"></div>

    <div class="panel-footer">
      <form id="chat_form">
        <div class="input-group">
          <input id="nickname_input" type="text" class="form-control" placeholder="Nickname" required>
          <input id="chat_input" type="text" class="form-control" placeholder="Enter your message..." data-role="chat-form-input" required autofocus />
          <span class="input-group-btn">
            <input type="submit" class="btn btn-default" value="Send" />
          </span>
        </div>
      </form>
    </div>
  </div>
  </main>
</div>
